<html>
<head>
	<title> Sudoku Game</title>
	<link rel="icon" href="images/cat.jpg">
	<link rel="stylesheet" type="text/css" href="/stylesheets/application.css">
</head>
<body>
	<hi1>Life is too short for playing Sudoku</h1>
		<div id="flash">
  	<%= flash[:notice] %>
		</div>
		<div id="sudoku">
			<form action="/" method="post">
			<% 3.times do |row| %>
				<div class='row'>
					<% 3.times do |box| %>
					<div class ="box">
						<% 3.times do |cell_row| %>
						<div class="cell-row">
							<% 3.times do |cell| %>								
								<%= partial :cell, :locals=>{ :cell_index => row * 27 + box * 3 + cell_row * 9 + cell} %>
							<% end %>
							</div>
							<% end %>
						</div>
						<% end %>
					</div>
					<% end %>							
				<button class="btn-6d">Check solution</button>
			</form>
			</body>
</html>	